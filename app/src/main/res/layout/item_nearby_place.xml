<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@color/main_foreground"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_foreground"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/tvNearbyPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_accent"
                android:background="@color/main_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/item_nearby_place_add_a_custom_place_title"
                 />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivNearbyPlacePhoto"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:civ_border_color="@color/main_drawables"
                app:civ_border_width="1dp"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_settings_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>